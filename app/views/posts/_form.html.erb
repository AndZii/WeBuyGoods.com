<div class="post-form-wrapper">

<%= form_for @post, :html => {:class => "form-horizontal"} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "Title (Page URL)", :class => "control-label" %><br>
    <%= f.text_area :title, :class => "form-control" %>
  </div>
    <div class="control-group">
      <%= f.label :intro, :class => "control-label" %><br>
      <%= f.text_area :intro, :class => "form-control" %>
    </div>

  <div class="control-group">
    <%= f.label :main_part, :class => "control-label" %><br>
    <%= f.text_area :main_part, :class => "form-control" %>
  </div>

    <div class="control-group">
      <%= f.label :featured, :class => "control-label" %>
      <%= f.check_box :featured, :class => "" %>
    </div>
    <div class="control-group">
      <%= f.label :posted_by, :class => "control-label"%>
      <%= f.text_field :posted_by, :class => "form-control" %>
    </div>
  <div class="control-group">
    <%= f.label "Type", :class => "control-label"%>
    <%= f.select(:label, ['news','comment','review'], {}, { :class => ' form-control' }) %>
  </div>
     <div class="control-group">
       <%= f.label "Upload image", :class => "control-label"%>
       <%= f.file_field :image, :class => ' form-control' %>
     </div>

  <div class="control-group">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
</div>