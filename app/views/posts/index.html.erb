<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Main part</th>
      <th>Label</th>
      <th>Intro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.main_part %></td>
        <td><%= post.label %></td>
        <td><%= post.intro %></td>
        <td><%= link_to 'Show', post, :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_post_path(post) , :class => "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post' , new_post_path, :class => "btn btn-success" %>
