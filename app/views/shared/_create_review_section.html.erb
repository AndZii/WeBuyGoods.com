<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="control-group">
      <%= f.label :title %><br>
      <%= f.text_area :title %>
    </div>
    <div class="control-group">
      <%= f.label :intro %><br>
      <%= f.text_area :intro %>
    </div>

    <div class="control-group">
      <%= f.label :main_part %><br>
      <%= f.text_area :main_part %>
    </div>
    <div class="control-group">
      <%= f.label :featured %>
      <%= f.check_box :featured %>
    </div>
    <div class="control-group">
      <%= f.label :posted_by %><br>
      <%= f.text_field :posted_by %>
    </div>

    <div class="control-group">
      <%= f.select(:label, ['NEWS','COMMENT','REVIEW'], {}, { :class => 'my_style_class' }) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
